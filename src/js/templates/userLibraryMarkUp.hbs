{{#each this}}
  <li class='gallery__item' id={{id}}>
    <img
      class='gallery__icon'
      src='{{poster_path}}'
      alt='{{title}}'
      width='280'
      height='394'
      loading='lazy'
    />
    <div class='item__description'>
      <p class='item__title'>{{title}}</p>
      <p class='item__info'>
        {{genre_for_gallery}}&nbsp;
        <span class='item__info--year'>&nbsp;{{release_date}}</span>
      </p>
      <p class='item__info--rating'>{{vote_average}}</p>
    </div>
  </li>
{{/each}}